<div class="main-background-image">
  <div class="container">
    <div class="section">
      <div class="content-wrap page-container">
        <div class="row">
          <div class="col s8 m8 l8">
            <div class="section">
              <form class="new-post-form">
                <div>
                  <label for="Post-title">Title</label>
                  <input type="text" id="post-title" name="post-title" />
                </div>
                <div>
                  <label for="github-reponame">Repo Name:</label>
                  <input
                    id="github-reponame"
                    name="github-reponame"
                    placeholder="Repo Name"
                  />
                </div>
                <div>
                  <label for="github-repo-url">Repo URL:</label>
                  <input
                    id="github-repo-url"
                    name="github-repo-url"
                    placeholder="Repo URL"
                  />
                </div>
                <div>
                  <label for="repo-description">Description:</label>
                  <textarea
                    id="repo-description"
                    class="materialize-textarea"
                    name="repo-description"
                    placeholder="Description"
                  ></textarea>
                </div>
                <button type="submit" class="btn">Create</button>
              </form>
            </div>
          </div>
          <div class="col s4 m4 l4">
            <a
              href="/friendsList/1"
              data-target="slide-out"
              class="waves-effect waves-light btn-small sidenav-trigger"
              id="friends"
            ><i class="material-icons left">cloud</i>Friends</a>
          </div>
        </div>

        {{! if there posts show them }}
        {{#if posts.length}}
          <div class="row">
            {{#each posts as |post|}}
              <div class="col s6 m6 l6">
                <div class="card stick-action blue-grey darken-1">
                  <div class="card-content activator white-text">
                    <span class="card-title">{{post.title}}<i
                        class="material-icons right"
                      >more_vert</i></span>
                    <a
                      class="btn-floating halfway-fab waves-effect waves-light red add-comment"
                    ><i class="material-icons">add</i></a>
                    <p>{{post.text_body}}</p>
                  </div>
                  <div class="card-action">
                    <a
                      href="{{post.github_repo_url}}"
                      target="_blank"
                    >{{post.repo_name}}</a>
                    <a href="/post/{{id}}">{{comments.length}}
                      {{format_plural "comment" comments.length}}</a>
                  </div>
                  <div class="card-reveal">
                    <span class="card-title">Created<i
                        class="material-icons right"
                      >close</i></span>
                    <p>Add to DB by
                      {{post.user.username}}
                      on
                      {{format_date created_at}}</p>
                  </div>
                </div>
              </div>
            {{/each}}

          </div>
        {{/if}}
        {{! side nav for friends list }}
        <ul id="slide-out" class="sidenav">
          <li>
            <div class="user-view">
              <div class="background">
                <img src="" />
              </div>
            </div>
          </li>
          {{#if friendsList.length}}
            {{#each friendsList as |friend|}}
              <li><a href="#!">{{friend.username}}</a></li>
            {{/each}}
          {{/if}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/javascript/add-post.js"></script>
<script src="javascript/friendslist.js"></script>