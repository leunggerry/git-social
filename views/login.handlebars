<form class="login-form">
  <div class="bg-img">
    <div class="content">
      <header>Login</header>
      <form action="#">
        <div class="row">
          <div class="col s12">
            <div class="field">
              <span class="user"></span>
              <input
                type="text"
                required
                placeholder="Enter Email"
                id="email-login"
              />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <div class="field space">
              <span class="lock"></span>
              <input
                type="password"
                class="pass-key"
                required
                placeholder="Password"
                id="password-login"
              />
              <span class="show">SHOW</span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <div class="pass">
              <a href="#">Forgot Password?</a>
            </div>
          </div>
        </div>

        <div class="field login-button">
          <input type="submit" value="LOGIN" />
        </div>
      </form>
    </div>
  </div>
</form>

<script src="/javascript/login.js"></script>