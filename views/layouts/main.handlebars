{{! Always have a views/layouts/main.handlebars. 
    all other template files go to views folder (views/) }}
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Git Social</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    {{!-- Materialize CSS --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">


  </head>
  <body>
    <div class="wrapper">
      <header>
        <h1>
          <a href="/">Git Social</a>
        </h1>
        <nav>

          {{#if loggedIn}}
            <button id="logout" class="waves-effect waves-teal btn-flat">Logout</button>
          {{else}}
            <button id="login-btn" class="waves-effect waves-teal btn-flat">Login</button>
          {{/if}}
        </nav>

      </header>
      <div class="container">
        <main>
          {{{body}}}
        </main>
      </div>
      <footer>
        Thanks for visiting!
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{else}}
      <script src="/javascript/home.js"></script>
    {{/if}}

  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</html>