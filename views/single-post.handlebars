<article class="post">
  <div class="title">
    <h3>{{post.title}}</h3>
    <p>{{post.text_body}}</p>
    <a href="{{post.github_repo_url}}" target="_blank">{{post.title}}
      - Github repo</a>
  </div>
  <div class="meta">
    Posted by
    {{post.user.username}}
    on
    {{post.created_at}}
    |
    <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

{{#if loggedIn}}
  {{! only logged in user can post comments }}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
    </div>
  </form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>

{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}