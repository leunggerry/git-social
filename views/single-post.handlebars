<div class="section page-container">
  <div class="content-wrap">
      {{> post-info post}} 

    {{#if loggedIn}}
      {{! only logged in user can post comments }}
      <div class="row">
        <div class="col s12 m6">
          <form class="comment-form">
            <div>
              <textarea name="comment-body"></textarea>
            </div>

            <div>
              <a
                class="waves-effect waves-light btn-small comment-button"
              >comment</a>
            </div>
          </form>
        </div>
      </div>
    {{/if}}

    <div class="row">
      <div class="col s12 m6">
        <span class="flow-text">
          <div class="comments">
            {{#each post.comments}}
              <section class="comment">
                <ul class="collection">
                  <li class="collection-item">
                    <p>
                      {{comment_text}}
                    </p><br />
                    <h6>{{user.username}}</h6>
                    <span>|</span>
                    <span>{{format_date created_at}}</span>
                  </li>
                </ul>
              </section>
            {{/each}}
          </div>
        </span>
      </div>
    </div>
  </div>
</div>

{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}